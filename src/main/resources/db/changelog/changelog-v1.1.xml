<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1" author="gomaa">
        <createTable tableName="product">
            <column name="id" autoIncrement="true" type="int">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="serial_nr" type="varchar(45)"/>
            <column name="title" type="varchar(45)"/>
            <column name="description" type="varchar(45)"/>
            <column name="brand" type="varchar(45)"/>
            <column name="price" type="NUMERIC(38,2)"/>
            <column name="pto" type="varchar(45)"/>
            <column name="production_date" type="varchar(45)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>